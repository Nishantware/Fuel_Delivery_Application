<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".option">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"

        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Dashboard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />

        <!-- Grid Layout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Item 1 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/user"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Item 2 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginLeft="50dp"

                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgmaganer"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/admin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manager"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Item 3 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgDelivery"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/deliveryboy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Boy"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Item 4 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgMechanic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/mechanic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mechanic"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>


        </GridLayout>

    </LinearLayout>




</ScrollView>